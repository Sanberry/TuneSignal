<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

    </style>

    <style name="View">
        <item name="android:layout_marginTop">@dimen/general_spacing</item>
        <item name="android:layout_marginBottom">@dimen/view_bottom_space</item>
        <item name="android:background">@color/colorWhite</item>

    </style>

    <style name="PlaylistInfo">
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/playlist</item>
    </style>

    <style name="PlaylistButton">
        <item name="android:layout_gravity">center</item>
        <item name="android:scaleType">fitCenter</item>
    </style>

    <style name="PlaylistName">
        <item name="android:textSize">@dimen/playlist_text_size</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">@dimen/general_spacing</item>
        <item name="android:textColor">@color/text_color_primary</item>
    </style>

    <style name="ListView">
        <item name="android:orientation">vertical</item>
        <item name="android:paddingBottom">@dimen/general_spacing</item>
        <item name="android:paddingTop">@dimen/general_spacing</item>
        <item name="android:layout_marginLeft">@dimen/list_margin</item>
    </style>

    <style name="IconDisplay">
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@color/colorButtonsBackground</item>
    </style>

    <style name="ButtonsLayout">
        <item name="android:gravity">center</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:paddingLeft">@dimen/button_layout_padding</item>
        <item name="android:paddingRight">@dimen/button_layout_padding</item>
        <item name="android:background">@color/colorButtonsBackground</item>
    </style>

    <style name="Buttons">
        <item name="android:layout_marginBottom">@dimen/general_spacing</item>
    </style>

    <style name="AlbumImage">
        <item name="android:scaleType">fitCenter</item>
    </style>

    <style name="SongDetails">
        <item name="android:layout_marginLeft">@dimen/general_spacing</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:marqueeRepeatLimit">marquee_forever</item>
        <item name="android:scrollHorizontally">true</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">@dimen/song_text_size</item>
        <item name="android:textColor">@color/text_color_primary</item>

    </style>

    <style name="Theme.AppTheme.DayNight.DarkActionBar" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <item name="android:colorBackground">@color/background_material_light</item>
        <item name="android:textColorPrimary">@color/text_color_primary</item>
    </style>
</resources>
